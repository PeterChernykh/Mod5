@model IEnumerable<WebApp2.Models.AuthorViewModel>

@{
    ViewBag.Title = "Authors";
}
<h3>@ViewBag.Message</h3>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <div class="jumbotron">
        <table class="table">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Birthday
                </th>
                <th>
                    Nickname
                </th>
                <th></th>
            </tr>
            @foreach (var author in Model)
            {
                <tr>
                    <td>
                        @author.Id
                    </td>
                    <td>
                        @author.Birthday
                    </td>
                    <td>
                        @author.Name
                    </td>
                    <td>
                        @Html.ActionLink("Подробнее", "Details", new { id = author.Id })
                    </td>
                </tr>
            }
        </table>
        <hr />
    </div>
</body>
</html>
